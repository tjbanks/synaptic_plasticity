{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$INPUT_DIR": "$BASE_DIR/input"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstop": 1000.0,
    "dt": 0.1,
    "dL": 2000.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -80.0
  },
  "node_sets": {
    "virt_CA3": {
      "model_type": "virtual"
    },
    "CA3e": {
      "pop_name":"CA3e"
    }
  },
  "inputs": {
    "spikes_CA3e":{
      "input_type":"spikes",
      "module":"csv",
      "input_file":"$INPUT_DIR/input_spikes.csv",
      "node_set":"input"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "${OUTPUT_DIR}",
    "spikes_file": "spikes.h5",
    "spikes_file_csv": "spikes.csv",
    "overwrite_output_dir": true
  },
  "reports": {
    "membrane_report":{
      "module":"membrane_report",
      "cells":"CA3e",
      "variable_name":["v"],
      "file_name":"cell_vars.h5",
      "sections":"soma"
    },
    "syn_report": {
      "cells": "virt_CA3",
      "variable_name": "i_ampa",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "pyr2pyr"
    }
  },
  "network": "./circuit_config.json"
}
